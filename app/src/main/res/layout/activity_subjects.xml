<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectsActivity"
    android:orientation="vertical"
    style="@style/MyToolbarTheme">

    <TextView
        android:layout_margin="30dp"
        android:padding="5dp"
        android:id="@+id/active_assignment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@android:color/holo_orange_light"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:id="@+id/file_chosen_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:layout_marginTop="20dp"
     android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/choose_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Choose your file"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:textColor="#FFF"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/upload_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Upload file"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:textColor="#FFF"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        />




    <Button
        android:id="@+id/view_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="View your file ->"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:textColor="#FFF"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        />




</LinearLayout>

</ScrollView>